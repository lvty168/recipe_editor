                                      ></ComboBox>
                            <Label Content="[-]"></Label>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="2,2,2,2" 
                                    IsEnabled="{Binding  Cath4_t_ramp_on}">
                            <Label Content="t-delay" Width="70"/>
                            <TextBox Width="80"
                                     Text="{Binding  Cathode_4.t_delay, Converter={StaticResource FloatToTimeString}}"
                                     MaxLines="1" HorizontalContentAlignment="Center">
                                <b:Interaction.Behaviors>
                                    <local:TextBoxEnterKeyUpdateBehavior/>
                                </b:Interaction.Behaviors>
                            </TextBox>
                            <Label Content="[hh:mm:ss]"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="2,2,2,2"
                                    Visibility="{Binding Cath4_On}">
                            <Label Content="t-ramp" Width="70"/>
                            <TextBox Width="80"  Text="{Binding Cath4_T_Ramp, 
                                Converter={StaticResource FloatToTimeString}}" MaxLines="1" HorizontalContentAlignment="Center">
                                <b:Interaction.Behaviors>
                                    <local:TextBoxEnterKeyUpdateBehavior/>
                                </b:Interaction.Behaviors>
                            </TextBox>
                            <Label Content="[hh:mm:ss]"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="2,2,2,2" 
                                    Visibility="{Binding Cath4_On}">
                            <Label Content="I Arc 4.1" Width="70"/>
                            <TextBox Width="40" Margin="2,2,2,2"
                                     Text="{Binding Cathode_4.arc_1_start}" MaxLines="1" HorizontalContentAlignment="Center"
                                     >
                                <b:Interaction.Behaviors>
                                    <local:TextBoxEnterKeyUpdateBehavior/>
                                </b:Interaction.Behaviors>
                            </TextBox>
                            <TextBox Width="40" Margin="2,2,2,2"
                                     Text="{Binding Cathode_4.arc_1_end}"
                                     IsEnabled="{Binding Cath4_t_ramp_on}" MaxLines="1" HorizontalContentAlignment="Center"
                                     >
                                <b:Interaction.Behaviors>
                                    <local:TextBoxEnterKeyUpdateBehavior/>
                                </b:Interaction.Behaviors>
                            </TextBox>
                            <Label Content="[A]"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="2,2,2,2" Visibility="{Binding Cath4_On}">
                            <Label Content="I Arc 4.2" Width="70"/>
                            <TextBox Width="40" Margin="2,2,2,2"
                                     Text="{Binding Cathode_4.arc_2_start}" MaxLines="1" HorizontalContentAlignment="Center"
                                     >
                                <b:Interaction.Behaviors>
                                    <local:TextBoxEnterKeyUpdateBehavior/>
                                </b:Interaction.Behaviors>
                            </TextBox>
                            <TextBox Width="40" Margin="2,2,2,2"
                                     Text="{Binding Cathode_4.arc_2_end}"
                                     IsEnabled="{Binding Cath4_t_ramp_on}" MaxLines="1" HorizontalContentAlignment="Center"
                                     >
                                <b:Interaction.Behaviors>
                                    <local:TextBoxEnterKeyUpdateBehavior/>
                                </b:Interaction.Behaviors>
                            </TextBox>
                            <Label Content="[A]"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="2,2,2,2" Visibility="{Binding Cath4_On}">
                            <Label Content="I Arc 4.3" Width="70"/>
                            <TextBox Width="40" Margin="2,2,2,2"
                                     Text="{Binding Cathode_4.arc_3_start}" MaxLines="1" HorizontalContentAlignment="Center"
                                     >
                                <b:Interaction.Behaviors>
                                    <local:TextBoxEnterKeyUpdateBehavior/>
                                </b:Interaction.Behaviors>
                            </TextBox>
                            <TextBox Width="40" Margin="2,2,2,2"
                                     Text="{Binding Cathode_4.arc_3_end}"
                                     IsEnabled="{Binding Cath4_t_ramp_on}" MaxLines="1" HorizontalContentAlignment="Center"
                                     >
                                <b:Interaction.Behaviors>
                                    <local:TextBoxEnterKeyUpdateBehavior/>
                                </b:Interaction.Behaviors>
                            </TextBox>
                            <Label Content="[A]"/>
                        </StackPanel>
                    </WrapPanel>
                </GroupBox>
                <Border Width="420" Height="200"></Border>
                <GroupBox Header="Cathode 6" Margin="2,2,2,2" Height="260" Width="420">
                    <WrapPanel Orientation="Vertical">
                        <StackPanel Orientation="Horizontal" Margin="2,2,2,2" IsEnabled="{Binding Cathode_enable}">
                            <Label Content="Operation" Width="70"></Label>
                            <ComboBox Width="80"
                                      ItemsSource="{Binding DC_Pls_Cathode_Dict}" SelectedValuePath="Value" 
                                      DisplayMemberPath="Key"  SelectedValue="{Binding Cath6_Operation}"
                                      ></ComboBox>
                            <Label Content="[-]"></Label>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="2,2,2,2" 
                                    Visibility="{Binding Cath6_On}">
                            <Label Content="Control" Width="70"></Label>
                            <ComboBox Width="80"></ComboBox>
                            <Label Content="[-]"></Label>

                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="2,2,2,2">
                            <Label Content="Shutter" Width="70"></Label>
                            <ComboBox Width="80"
                                      ItemsSource="{Binding Gas_Valve_Dict}" SelectedValuePath="Value" DisplayMemberPath="Key"  
                                      SelectedValue="{Binding Cathode_6.shutter}"
