                                <b:Interaction.Behaviors>
                                    <local:TextBoxEnterKeyUpdateBehavior/>
                                </b:Interaction.Behaviors>
                            </TextBox>
                            <Label Content="[A]"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="2,2,2,2" Visibility="{Binding Cath6_On}">
                            <Label Content="I Arc 6.3(high)" Width="90"/>
                            <TextBox Width="40" Margin="2,2,2,2" Text="{Binding Cathode_6.arc_3_start_high}" MaxLines="1" HorizontalContentAlignment="Center">
