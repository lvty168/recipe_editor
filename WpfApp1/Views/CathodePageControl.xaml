                                      ></ComboBox>
                            <Label Content="[-]"></Label>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="2,2,2,2" Visibility="{Binding Cath6_On}">
                            <Label Content="t-delay" Width="70"/>
                            <TextBox Width="80"
                                     Text="{Binding  Cathode_6.t_delay, Converter={StaticResource FloatToTimeString}}" MaxLines="1"
                                     IsEnabled="{Binding Cath6_t_ramp_on}" HorizontalContentAlignment="Center">
                                <b:Interaction.Behaviors>
                                    <local:TextBoxEnterKeyUpdateBehavior/>
                                </b:Interaction.Behaviors>
                            </TextBox>
                            <Label Content="[hh:mm:ss]"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="2,2,2,2" 
                                    Visibility="{Binding Cath6_On}">
                            <Label Content="t-ramp" Width="70"/>
                            <TextBox Width="80" Text="{Binding Cath6_T_Ramp, Converter={StaticResource FloatToTimeString}}"
                                     MaxLines="1" HorizontalContentAlignment="Center">
                                <b:Interaction.Behaviors>
                                    <local:TextBoxEnterKeyUpdateBehavior/>
                                </b:Interaction.Behaviors>
                            </TextBox>
                            <Label Content="[hh:mm:ss]"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="2,2,2,2"
                                    Visibility="{Binding Cath6_pls_mode}">
                            <Label Content="Frequency" Width="70"/>
                            <TextBox Width="40" Margin="2,2,2,2" Text="{Binding Cathode_6.frequency}" MaxLines="1" HorizontalContentAlignment="Center">
                                <b:Interaction.Behaviors>
                                    <local:TextBoxEnterKeyUpdateBehavior/>
                                </b:Interaction.Behaviors>
                            </TextBox>

                            <Label Content="[Hz]"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="2,2,2,2" Visibility="{Binding Cath6_pls_mode}">
                            <Label Content="R.R.T." Width="70"/>
                            <TextBox Width="40" Margin="2,2,2,2" Text="{Binding Cathode_6.rrt}" MaxLines="1" HorizontalContentAlignment="Center">
                                <b:Interaction.Behaviors>
                                    <local:TextBoxEnterKeyUpdateBehavior/>
                                </b:Interaction.Behaviors>
                            </TextBox>

                            <Label Content="[µs]"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="2,2,2,2" Visibility="{Binding Cath6_On}">
                            <Label Content="I Arc 6.1(high)" Width="90"/>
                            <TextBox Width="40" Margin="2,2,2,2" Text="{Binding Cathode_6.arc_1_start_high}" MaxLines="1" HorizontalContentAlignment="Center">
                                <b:Interaction.Behaviors>
                                    <local:TextBoxEnterKeyUpdateBehavior/>
                                </b:Interaction.Behaviors>
                            </TextBox>
                            <TextBox Width="40" Margin="2,2,2,2" Text="{Binding Cathode_6.arc_1_end_high}"
                                     IsEnabled="{Binding Cath6_t_ramp_on}" MaxLines="1" HorizontalContentAlignment="Center">
                                <b:Interaction.Behaviors>
                                    <local:TextBoxEnterKeyUpdateBehavior/>
                                </b:Interaction.Behaviors>
                            </TextBox>
                            <Label Content="[A]"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="2,2,2,2" Visibility="{Binding Cath6_pls_mode}">
                            <Label Content="I Arc 6.1(low)" Width="90"/>
                            <TextBox Width="40" Margin="2,2,2,2" Text="{Binding Cathode_6.arc_1_start_low}" MaxLines="1" HorizontalContentAlignment="Center">
                                <b:Interaction.Behaviors>
                                    <local:TextBoxEnterKeyUpdateBehavior/>
                                </b:Interaction.Behaviors>
                            </TextBox>
